{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "tools.schema.json",

  "title": "Tools",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Name of the tool"
      },
      "icon": {
        "type": "string",
        "description": "Icon identifier or class"
      },
      "link": {
        "type": "string",
        "format": "uri",
        "description": "Link to the tool"
      },
      "yearsOfExperience": {
        "type": "number",
        "minimum": 0,
        "description": "Years of experience with the tool (greater than 0)"
      }
    },
    "required": ["name", "icon", "link", "yearsOfExperience"],
    "additionalProperties": false
  }
}
