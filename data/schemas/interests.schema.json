{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "interests.schema.json",

  "title": "Interests",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Name of the interest"
      },
      "icon": {
        "type": "string",
        "description": "Emoji or icon class representing the interest"
      }
    },
    "required": ["name", "icon"],
    "additionalProperties": false
  }
}
